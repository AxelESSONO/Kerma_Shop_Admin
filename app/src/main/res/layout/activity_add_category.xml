<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_bg_img"
    tools:context="com.obiangetfils.kermashopadmin.controller.AddCategoryActivity">

    <include
        android:id="@+id/include_1"
        layout="@layout/toolbar_layout"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Kerma Shop"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/maven_pro_regular"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/category_name_edt"
                android:layout_width= "match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_corners_edittext_dark"
                android:hint="@string/categories_name"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_below="@id/image_category"/>

            <ImageView
                android:id="@+id/image_category"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/placeholder"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/category_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="10dp"
        android:text="Enregistrer"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>